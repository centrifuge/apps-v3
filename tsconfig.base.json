  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      // "@centrifuge/utils/*": ["packages/utils/src/*"],
      // "@centrifuge/hooks/*": ["packages/hooks/src/*"],
      //"@centrifuge/ui/*": ["packages/ui/src/*"],
      "@centrifuge/forms/*": ["packages/forms/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
