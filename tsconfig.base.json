{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "packages/forms"
    },
    {
      "path": "packages/shared"
    },
    {
      "path": "packages/wallet"
    },
    {
      "path": "packages/ui"
    }
  ]
}
